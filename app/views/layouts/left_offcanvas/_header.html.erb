<h5 class="m-0"><%= current_user.name %></h5>
<div class="session-buttons pe-1">
  <%= link_to edit_user_registration_path, id: "edit-user", class: "btn btn-lg btn-default",
              data: { turbo_frame: :external_modal } do %>
    <i class="bi bi-gear"></i>
  <% end %>
  <%= form_with url: destroy_user_session_path, method: :delete, class: "d-inline", data: { turbo_frame: "_top" } do |f| %>
    <%= f.button id: "logout", class: "btn btn-lg btn-default" do %>
      <i class="bi bi-box-arrow-right"></i>
    <% end %>
  <% end %>
</div>
