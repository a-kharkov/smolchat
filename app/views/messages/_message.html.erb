<%- own_message = message.user.id == current_user_id %>
<div id="message_<%= message.id %>" class="card message-card border-0 rounded-4 py-2 mb-1 <%= own_message ? 'ms-auto bg-body-secondary' : 'me-auto' %>"
     data-user-id="<%= message.user.id %>"
     data-chat-target="message">
  <%- if message.conversation.group? && !own_message %>
    <header class="px-3 d-none">
      <strong class="text-primary-emphasis"><%=  message.user.name  %></strong>
    </header>
  <%  end %>
  <div class="d-flex justify-content-between align-items-end px-3">
    <p class="card-text mb-0 me-2"><%= message.text %></p>
    <small class="text-secondary"><%= datetime_format(message.created_at, :longer) %></small>
  </div>
</div>
