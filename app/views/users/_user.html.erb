<%- selected = user.in?(@conversation.users) %>
<div class="list-group-item list-group-item-action border-0 <%= 'list-group-item-secondary' if selected %>" role="button"
     data-action="click->subtle-checklist#toggle">
  <%= check_box_tag 'conversation[user_ids][]', id: "user_id_#{user.id}", checked: selected, value: user.id, hidden: true %>
  <div class="d-flex w-100 justify-content-between">
    <span class="fw-bold"><%= user.name %></span>
  </div>
  <div class="d-flex w-100 justify-content-between">
    <small class="text-secondary">Last seen <%= time_ago_in_words(user.updated_at) %> ago</small>
  </div>
</div>
